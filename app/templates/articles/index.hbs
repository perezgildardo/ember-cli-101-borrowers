<table class="primary">
  <thead>
    <tr>
      <th>Description</th>
      <th>Notes</th>
      <th>Borrowed since</th>
      <th>
        <label>
          <span>Show returned?</span>
          {{input type="checkbox" checked=showReturned}}
        </label>
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each filteredResults itemController='articles/item'}}
      <tr>
        <td>{{model.description}}</td>
        <td>{{model.notes}}</td>
        <td>{{formatted-date model.createdAt 'LL'}}</td>
        <td>{{view Ember.Select content=states selection=model.state}}</td>
        <td>
          {{#if model.isSaving}}
            <p>Saving...</p>
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
